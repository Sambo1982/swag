<div class="form-container">
    <section>
         <%= form_for @team,  :html => {:class => "form", :role => "form-horizontal"} do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="fa fa-users"></span>
                    </span>
                    <%= f.text_field :name, :placeholder => "Team Name", :class => "form-control"  %>
                </div>
            </div>

            <div class="form-group">
              <%= f.submit "Create team", :class => "btn btn-primary btn-block btn-lg" %>  
            </div>

        <%end%>
    </section>
     <section>
        <p class="text-center text-muted">Don't overthink it. You can always edit it later.</p>
    </section>
</div>

