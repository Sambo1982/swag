<div class="form-container">
    <section>
         <%= form_for @team,  :html => {:class => "form", :role => "form-horizontal"} do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group input-group-lg">
              <%= f.text_field :name, :placeholder => "Team Name", :class => "form-control"  %>
            </div>

             <div class="form-group input-group-lg">
              <%= f.text_area :description, :placeholder => "Description of your team", :class => "form-control"  %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.submit "Create team", :class => "btn btn-primary btn-block" %>
                </div>  
              </div>
              <div class="col-md-6"
                <div class="form-group">
                    <%= link_to "Cancel", teams_path, :class => "btn btn-default btn-block" %>  
                </div>
              </div>

            </div>

        <%end%>
    </section>
     <section>
        <p class="text-center text-muted">Don't overthink it. You can always edit it later.</p>
    </section>
</div>

