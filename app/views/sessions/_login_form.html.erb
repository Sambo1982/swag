<div class="form-container">
    <section>
         <%= form_for(:session, url: sessions_path, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="fa fa-envelope"></span>
                    </span>
                    <%= f.text_field :email, :placeholder => "Email", :class => "form-control"   %>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="fa fa-lock"></span>
                    </span>
                     <%= f.password_field :password, :placeholder => "Password", :class => "form-control"  %>
                </div>
            </div>

            <div class="form-group">
              <%= f.submit "Sign in", :class => "btn btn-primary btn-block btn-lg" %>  
            </div>

        <%end%>
    </section>

    <section>
        <p class="text-center text-muted">Don't have an account? <%=link_to "Sign up now", new_user_path %></p>
    </section>

</div>

 