<% provide(:title, "Sign in") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <legend class="centered">
      <h1>Sign in</h1>
    </legend>
     <div class="well">

       <%= form_for(:session, url: sessions_path, :html => {:class => "form", :role => "form"}) do |f| %>
      
       <%= f.text_field :email, :placeholder => "Email", :class => "form-control input-lg"  %>
       <%= f.password_field :password, :placeholder => "Password", :class => "form-control input-lg"  %>

      <%= f.submit "Sign in", class: "btn  btn-block custom-btn" %>
    <% end %>

    </div>
  </div>
</div>