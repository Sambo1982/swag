$("ul.errors").html("")
<% if @integration.errors.any? %>
  <% @integration.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
	$("#integrations-list-box").html("<%= escape_javascript(render 'integrations') %>")
  	$("#integration-modal").modal("hide")
<% end %>