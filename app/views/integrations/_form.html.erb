<%= form_for @integration, remote: true,  :html => {:class => "form-horizontal", :role => "form"} do |f| %>
  <div class="modal-body">
     <ul class="errors"></ul>
    
    <div class="form-group">
        <%= f.label :provider, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:provider, [['Pivotal Tracker', 'pivotal'], ['Other', 'other']], {}, {:class => "form-control"})%>
      </div>
  </div>

   <div class="form-group">
        <%= f.label :api_key, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
         <%= f.text_field :api_key, :class => "form-control" %>
      </div>
  </div>
 
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>